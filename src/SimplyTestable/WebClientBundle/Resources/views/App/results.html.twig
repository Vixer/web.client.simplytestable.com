{% extends 'SimplyTestableWebClientBundle::App/base.html.twig' %}

{% block title %}Results {{test.website}} (#{{test.testId}}) - {{ parent() }}{% endblock %}

{% block main %}         
        <div class="row-fluid">
            <div class="span12">
                {% include 'SimplyTestableWebClientBundle:Partials:test-input.html.twig' %}             
            </div>
        </div>

        <div class="row-fluid">
            <section>                
                <div class="span12 {% if test.state == 'no-sitemap' %} notification-panel {% endif %}" id="test-summary">
                    {% if test.state == 'no-sitemap' %}
                        <h2 class="info"><i class="icon-exclamation-sign"></i>No sitemap found, unable to run tests</h2>

                        <p class="intro">
                            URLs for a site-wide test are collected from your <a href="http://en.wikipedia.org/wiki/Sitemaps">sitemap</a>.                           
                            We looked hard but couldn't find any URLs listed in any sitemaps and so no tests can be run.
                        </p>                        
                        
                        <div class="row-fluid">
                            <div class="span6">
                                <h3>What we're doing about this</h3>                                                

                                <ul>
                                    <li>
                                        <p>
                                            building a sitemap generator
                                        </p>
                                    </li>
                                    <li>
                                        <p>
                                            collecting URLs from other sources such as RSS feeds
                                        </p>
                                    </li>                            
                                    <li>
                                        <p>
                                            letting you give us a list of URLs to be tested
                                        </p>
                                    </li>                              
                                </ul>

                                <p>
                                    Work on these features won't start until after the public release on 12 October 2012.                                 
                                </p>
                                
                                <p>
                                    To find out when we introduce changes and improvements:
                                </p>
                                <ul>
                                    <li>
                                       <p><a href="http://eepurl.com/ni82f">sign up to our weekly updates newsletter</a> </p>
                                    </li>
                                    <li>
                                        <p><a href="//ttwitter.com/simplytestable">follow @simplytestable on twitter</a></p>
                                    </li>
                                    <li>
                                        <p><a href="http://blog.simplytestable.com">keep an eye out on our blog</a></p>
                                    </li>                                  
                                </ul>                                    
                                                                
                            </div>                            
                            <div class="span6">
                                <h3>What you can do</h3>

                                <ul>
                                    <li>
                                        <p>
                                            <a href="http://support.google.com/webmasters/bin/answer.py?hl=en&answer=183668">create a sitemap</a>,
                                            either an XML sitemap at <code>{{test.website}}sitemap.xml</code> or a plain text sitemap at
                                            <code>{{test.website}}sitemap.txt</code>
                                        </p>
                                    </li>
                                    <li>
                                        <p>
                                            update <code>{{test.website}}robots.txt</code> and link to your sitemap if it is at a non-standard location
                                        </p>
                                    </li>                            
                                </ul>
                            </div>                                
                        </div>
                        
                    {% else %}
                        <h2 class="info"><i class="icon-certificate"></i> Summary (<span id="url-list-url-count">{{ urls | length }}</span> urls, <span id="url-list-task-count">{{ test.tasks | length }}</span> tests)</h2>
                        {% include 'SimplyTestableWebClientBundle:Partials:results/task-states.html.twig' %}
                    {% endif %}                    
                </div>
                <div class="clearfix"></div>
            </section>
        </div>

        {% if urls | length %}

        <div id="test-list">
            <div class="row-fluid">
                <div class="span12">
                    <section id="url-list">
                        <span class="info"><i class="icon-tasks"></i></span>
                        
                        <ul class="nav nav-tabs">
                            <li><a href="#all" data-toggle="tab">All ({{ test.taskCount }})</a></li>
                            <li><a href="#tests-with-errors" data-toggle="tab">Tests with errors ({{ erroredTaskCount }})</a></li>
                            <li><a href="#tests-without-errors" data-toggle="tab">Tests without errors ({{ test.taskCount - taskCountByState.cancelled - erroredTaskCount }})</a></li>                            
                            <li><a href="#cancelled-tests" data-toggle="tab">Cancelled tests ({{ taskCountByState.cancelled }})</a></li>
                        </ul> 
                            
                        <div class="tab-content">
                            <div class="tab-pane active" id="all"></div>
                            <div class="tab-pane" id="tests-with-errors"></div>
                            <div class="tab-pane" id="tests-without-errors"></div>                            
                            <div class="tab-pane" id="cancelled-tests"></div>
                        </div>
                        
                        {% include 'SimplyTestableWebClientBundle:Partials:url-list.html.twig' %}      
                    </section>  
                </div>
            </div>            
        </div>    
        {% endif %}
{% endblock %}
